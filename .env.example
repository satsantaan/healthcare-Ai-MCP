# Environment Configuration
NODE_ENV=development
PORT=3001

# Frontend Configuration
VITE_TEMPO=true
VITE_API_BASE_URL=http://localhost:3001/api
FRONTEND_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Database Configuration
DATABASE_URL=./server/data/mcp_server.db

# AI Provider API Keys (Server)
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# AI Provider API Keys (Frontend - Optional)
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_ANTHROPIC_API_KEY=your_anthropic_api_key_here
VITE_GOOGLE_API_KEY=your_google_api_key_here

# Budget Configuration (USD)
DAILY_BUDGET=100
WEEKLY_BUDGET=500
MONTHLY_BUDGET=2000

# EMR Integration (Optional)
VITE_HL7_ENDPOINT=https://your-hl7-endpoint.com/api
VITE_FHIR_ENDPOINT=https://your-fhir-endpoint.com/fhir

# Security (Production)
VITE_ENCRYPTION_KEY=your_32_character_encryption_key_here
VITE_AUDIT_WEBHOOK=https://your-audit-webhook.com/webhook

# Database (Optional - if using backend)
VITE_DATABASE_URL=your_database_connection_string

# Authentication (Optional)
VITE_AUTH_DOMAIN=your-auth-domain.com
VITE_AUTH_CLIENT_ID=your_auth_client_id

# Monitoring (Optional)
VITE_SENTRY_DSN=your_sentry_dsn_for_error_tracking
VITE_ANALYTICS_ID=your_analytics_tracking_id

# Feature Flags
VITE_ENABLE_MEDICAL_IMAGING=false
VITE_ENABLE_FEDERATED_LEARNING=false
VITE_ENABLE_ADVANCED_ANALYTICS=true

# Performance
VITE_API_TIMEOUT=30000
VITE_MAX_CONCURRENT_REQUESTS=10

# Compliance
VITE_HIPAA_MODE=true
VITE_AUDIT_LEVEL=detailed
VITE_DATA_RETENTION_DAYS=2555  # 7 years for HIPAA compliance
